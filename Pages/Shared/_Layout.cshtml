<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RandyPowell</title>

    <link rel="stylesheet" href="~/lib/bootstrap-4.1.3-dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">
</head>
<body>
        <nav class="navbar fixed-top navbar-expand-lg navbar-dark">
            <div class="container">
                <a class="navbar-brand" asp-page="/Index">Randy Powell</a>
                
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">

                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/About">About Me</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Skills">Skills</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Projects">Projects</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Work">Work Experience</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Contact">Contact Me</a>
                        </li>
                    </ul>

                </div>
            </div>
        </nav>

    <partial name="_CookieConsentPartial" />

    <div class="container body-content mt-4">
        @RenderBody()
        <hr />
        <footer>
            <p>Give me a job!</p>
        </footer>
    </div>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap-4.1.3-dist/js/bootstrap.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
