@page
@model RandyPowell.Pages.Experiences.IndexModel

@{
    ViewData["Title"] = "Experiences";
}

<h2>Experiences</h2>
<a class="btn-dark btn" href="/../Skills">Edit Skills</a>
<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Experience[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Experience[0].Organization)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Experience[0].Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Experience[0].Dates)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Experience[0].Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Experience[0]._desc)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Experience)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Organization)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Location)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Dates)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item._desc)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
