@page "{id:int}"
@model RandyPowell.Pages.Experiences.DetailsModel

@{
    ViewData["Title"] = "Details";
}
<div class="">
    @if (Model.Experience.Type == 0)
    {
        <div class="headerPanel workPanel rounded">
            <h2 class="text-center">Job: @Html.DisplayFor(model => model.Experience.Title)</h2>
        </div>
    }
    else
    {
        <div class="headerPanel projectPanel rounded">
            <h2 class="text-center">Project: @Html.DisplayFor(model => model.Experience.Title)</h2>
        </div>
    }
    <div>
        <h4 class="text-muted">@Html.DisplayFor(model => model.Experience.Organization)</h4>
        <p class=""><i class="fas fa-map-marker-alt"></i> @Html.DisplayFor(model => model.Experience.Location)</p>
        <p class=""><i class="fas fa-calendar-alt"></i> @Html.DisplayFor(model => model.Experience.Dates)</p>

        @if (Model.Experience.ExperienceSkills.Count > 0)
        {
            <p class="card-text">Skills Used:</p>

            <ul class="cardList">
                @foreach (var skill in Model.Experience.ExperienceSkills)
                {
                    <li>@Model.Skills.FirstOrDefault(i => i.ID == skill.SkillId).Title</li>
                }
            </ul>
        }
        <ul>
            @foreach (var desc in Model.Experience._desc.Split(";"))
            {
                <li>@desc</li>
            }
        </ul>


    </div>
    <div>
        @if (Model.Experience.Type == 0)
        {
            <a asp-page="/Work">Back to Job List</a>
        }
        else
        {
            <a asp-page="/Projects">Back to Project List</a>
        }
    </div>
</div>